"use client";
import { useState, useEffect, useRef } from "react";
import { motion, AnimatePresence } from "framer-motion";
import ReactMarkdown from "react-markdown";
import { Search, ShieldCheck, Zap, PenTool, Terminal } from "lucide-react";

const AGENTS = [
  { id: "strategist", label: "Strategist", icon: Zap, color: "text-blue-400" },
  { id: "scout", label: "Scout", icon: Search, color: "text-yellow-400" },
  { id: "fact_checker", label: "Fact-Checker", icon: ShieldCheck, color: "text-red-400" },
  { id: "writer", label: "Writer", icon: PenTool, color: "text-green-400" },
];

export default function Home() {
  const [topic, setTopic] = useState("");
  const [activeNode, setActiveNode] = useState<string | null>(null);
  const [report, setReport] = useState("");
  const [logs, setLogs] = useState<string[]>([]);
  const [isSearching, setIsSearching] = useState(false);
  const scrollRef = useRef<HTMLDivElement>(null);

  const startResearch = async () => {
    setIsSearching(true);
    setReport("");
    setLogs(["Initializing core..."]);
    setActiveNode(null);

    const eventSource = new EventSource(`http://localhost:8000/research?topic=${encodeURIComponent(topic)}`);

    eventSource.onmessage = (event) => {
      const parsed = JSON.parse(event.data);
      
      if (parsed.node) {
        setActiveNode(parsed.node);
        setLogs((prev) => [...prev, `üìç Agent [${parsed.node}] completed task.`]);
      }
      
      if (parsed.report) {
        setReport(parsed.report);
        setIsSearching(false);
        eventSource.close();
      }
    };

    eventSource.onerror = () => {
      setLogs((prev) => [...prev, "‚ùå Connection error. Ensure FastAPI is running."]);
      setIsSearching(false);
      eventSource.close();
    };
  };

  return (
    <div className="min-h-screen bg-black text-slate-200 p-8 font-mono">
      {/* Header */}
      <div className="max-w-4xl mx-auto text-center mb-12">
        <h1 className="text-4xl font-bold tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400 mb-2">
          SOVEREIGN_RESEARCHER_v1.0
        </h1>
        <p className="text-slate-500 text-sm">100% LOCAL // ZERO_API_COST // PRIVATE_INTEL</p>
      </div>

      <div className="max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        {/* Left Column: Control Panel */}
        <div className="lg:col-span-1 space-y-6">
          <div className="bg-slate-900/50 border border-slate-800 p-6 rounded-xl shadow-2xl backdrop-blur-md">
            <h2 className="text-xs uppercase tracking-widest text-slate-400 mb-4 flex items-center gap-2">
              <Terminal size={14} /> System Command
            </h2>
            <input 
              className="w-full bg-black/50 border border-slate-700 rounded-lg p-3 text-sm focus:outline-none focus:border-cyan-500 transition-colors mb-4"
              placeholder="Enter research topic..."
              value={topic}
              onChange={(e) => setTopic(e.target.value)}
            />
            <button 
              onClick={startResearch}
              disabled={isSearching || !topic}
              className="w-full bg-cyan-600 hover:bg-cyan-500 disabled:bg-slate-800 text-white font-bold py-3 rounded-lg transition-all active:scale-95"
            >
              {isSearching ? "SEARCHING..." : "INITIALIZE_SCAN"}
            </button>
          </div>

          {/* Agent Map */}
          <div className="bg-slate-900/50 border border-slate-800 p-6 rounded-xl">
            <h2 className="text-xs uppercase tracking-widest text-slate-400 mb-6">Active Agent Nodes</h2>
            <div className="space-y-4">
              {AGENTS.map((agent) => (
                <div key={agent.id} className="flex items-center gap-4">
                  <motion.div 
                    animate={activeNode === agent.id ? { scale: [1, 1.2, 1], opacity: [0.5, 1, 0.5] } : {}}
                    transition={{ repeat: Infinity, duration: 1.5 }}
                    className={`p-2 rounded-full bg-slate-800 ${activeNode === agent.id ? agent.color : "text-slate-600"}`}
                  >
                    <agent.icon size={20} />
                  </motion.div>
                  <span className={`text-sm ${activeNode === agent.id ? "text-white font-bold" : "text-slate-500"}`}>
                    {agent.label}
                  </span>
                </div>
              ))}
            </div>
          </div>
        </div>

        {/* Right Column: Intelligence Report */}
        <div className="lg:col-span-2 space-y-6">
          <div className="bg-slate-900/50 border border-slate-800 h-[600px] rounded-xl overflow-hidden flex flex-col shadow-2xl">
            <div className="bg-slate-800/50 p-3 border-b border-slate-700 flex items-center justify-between">
              <span className="text-xs font-bold text-cyan-400">RESEARCH_OUTPUT.md</span>
              <div className="flex gap-1.5">
                <div className="w-2 h-2 rounded-full bg-red-500/50"></div>
                <div className="w-2 h-2 rounded-full bg-yellow-500/50"></div>
                <div className="w-2 h-2 rounded-full bg-green-500/50"></div>
              </div>
            </div>
            
            <div className="flex-1 overflow-y-auto p-8 prose prose-invert prose-cyan max-w-none">
              {!report && !isSearching && (
                <div className="h-full flex flex-col items-center justify-center text-slate-600 text-center">
                  <Search size={48} className="mb-4 opacity-20" />
                  <p>Awaiting system initialization...<br/>Ready to process external intelligence.</p>
                </div>
              )}
              {isSearching && !report && (
                <div className="space-y-4">
                  <div className="h-4 bg-slate-800 rounded w-3/4 animate-pulse"></div>
                  <div className="h-4 bg-slate-800 rounded w-1/2 animate-pulse"></div>
                  <div className="h-4 bg-slate-800 rounded w-5/6 animate-pulse"></div>
                </div>
              )}
              <ReactMarkdown>{report}</ReactMarkdown>
            </div>
          </div>
        </div>

      </div>
    </div>
  );
}